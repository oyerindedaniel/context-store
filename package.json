{
  "name": "use-context-store",
  "version": "0.1.0",
  "description": "Lightweight React context store with shallow selector and minimal re-renders.",
  "author": "Oyerinde Daniel",
  "license": "MIT",
  "private": false,
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "react",
    "context",
    "store",
    "shallow",
    "selector",
    "minimal",
    "re-renders"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "clean": "rimraf dist",
    "prepublishOnly": "pnpm run build"
  },
  "peerDependencies": {
    "react": ">=18 || >=19",
    "react-dom": ">=18 || >=19"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.4.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/coverage-v8": "^3.2.4",
    "jsdom": "^27.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5",
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/oyerindedaniel/context-store.git"
  },
  "bugs": {
    "url": "https://github.com/oyerindedaniel/context-store/issues"
  },
  "homepage": "https://github.com/oyerindedaniel/context-store#readme"
}
